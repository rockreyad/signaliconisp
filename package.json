{
  "private": true,
  "name": "signal-icon-isp",
  "version": "0.0.1",
  "author": "Mahamud Hasan <rockreyad@gmail.com>",
  "scripts": {
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "turbo build && changeset version",
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:migrate:dev": "pnpm run --filter=@repo/database migrate:dev",
    "db:migrate:deploy": "pnpm run --filter=@repo/database migrate:deploy",
    "db:push": "pnpm run --filter=@repo/database push",
    "db:pull": "pnpm run --filter=@repo/database pull",
    "db:generate": "pnpm run --filter=@repo/database generate",
    "db:studio": "pnpm run --filter=@repo/database studio"
  },
  "devDependencies": {
    "@changesets/changelog-github": "latest",
    "@changesets/cli": "latest",
    "knip": "^5.41.1",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "latest",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.15.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "projectPath": "apps/web"
}
