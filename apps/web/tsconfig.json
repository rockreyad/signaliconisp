{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": ["src", "next.config.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "**/node_modules/*"]
}
