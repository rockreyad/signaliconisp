{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_*", "VERCEL_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "node_modules/.prisma/**"
      ],
      "env": ["NEXT_PUBLIC_BASE_URL", "NEXT_PUBLIC_EXTERNAL_SERVER_URL"]
    },
    "type-check": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    }
  }
}
