{
  "name": "@repo/database",
  "version": "0.0.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "prisma": {
    "schema": "./src/schema.prisma"
  },
  "scripts": {
    "build": "prisma generate && tsup",
    "seed": "tsx ./src/scripts/seed.ts",
    "create:packages": "tsx ./src/scripts/createPackages.ts",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "studio": "prisma studio",
    "push": "prisma db push",
    "pull": "prisma db pull",
    "generate": "prisma generate"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "resolveExtensions": [
      ".ts",
      ".js"
    ],
    "splitting": false,
    "clean": true
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "zod": "^3.24.1",
    "@t3-oss/env-core": "^0.11.1"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/node": "22.10.5",
    "prisma": "^5.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}
